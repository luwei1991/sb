<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?selectableItemBackground"
    android:orientation="vertical">

    <include layout="@layout/layout_task_step" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:divider="@color/color_9EA7B4"
        android:showDividers="end|middle|beginning"
        android:stretchColumns="1">

        <TableRow
            android:layout_height="50dp"
            android:background="@color/cut_off_line"
            android:divider="@color/color_9EA7B4"
            android:showDividers="middle|beginning|end">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划名称" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划XXX" />

        </TableRow>

        <TableRow
            android:layout_height="50dp"
            android:divider="@color/color_9EA7B4"
            android:showDividers="middle|beginning|end">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="项目备案号" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划XXX" />

        </TableRow>

        <TableRow
            android:layout_height="50dp"
            android:background="@color/cut_off_line"
            android:divider="@color/color_9EA7B4"
            android:showDividers="middle|beginning|end">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="抽样类型" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划XXX" />

        </TableRow>

        <TableRow
            android:layout_height="50dp"
            android:divider="@color/color_9EA7B4"
            android:showDividers="middle|beginning|end">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划来源" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划XXX" />

        </TableRow>

        <TableRow
            android:layout_height="50dp"
            android:background="@color/cut_off_line"
            android:divider="@color/color_9EA7B4"
            android:showDividers="middle|beginning|end">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="开始时间" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划XXX" />

        </TableRow>

        <TableRow
            android:layout_height="50dp"
            android:divider="@color/color_9EA7B4"
            android:showDividers="middle|beginning|end">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="结束时间" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划XXX" />

        </TableRow>

        <TableRow
            android:layout_height="50dp"
            android:background="@color/cut_off_line"
            android:divider="@color/color_9EA7B4"
            android:showDividers="middle|beginning|end">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="产品种类" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划XXX" />

        </TableRow>

        <TableRow
            android:layout_height="50dp"
            android:divider="@color/color_9EA7B4"
            android:showDividers="middle|beginning|end">

            <TextView

                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="所需抽样批次" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="计划XXX" />

        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="下一步"
        android:textColor="@color/white" />
</LinearLayout>