<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#8BD4F5"
            app:title="任务信息"
            app:titleTextColor="#1D77AE" />

        <include layout="@layout/layout_task_step" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:divider="@color/color_9EA7B4"
            android:showDividers="end|middle|beginning"
            android:stretchColumns="1">

            <TableRow
                android:layout_height="50dp"
                android:background="@color/cut_off_line"
                android:divider="@color/color_9EA7B4"
                android:showDividers="middle|beginning|end">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划名称" />

                <TextView
                    android:id="@+id/tv_planname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划XXX" />

            </TableRow>

            <TableRow
                android:layout_height="50dp"
                android:divider="@color/color_9EA7B4"
                android:showDividers="middle|beginning|end">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="项目备案号" />

                <TextView
                    android:id="@+id/tv_planno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划XXX" />

            </TableRow>

            <TableRow
                android:layout_height="50dp"
                android:background="@color/cut_off_line"
                android:divider="@color/color_9EA7B4"
                android:showDividers="middle|beginning|end">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="抽样产品" />

                <TextView
                    android:id="@+id/tv_tasktypecount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划XXX" />

            </TableRow>

            <TableRow
                android:layout_height="50dp"
                android:divider="@color/color_9EA7B4"
                android:showDividers="middle|beginning|end">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划来源" />

                <TextView
                    android:id="@+id/tv_planfrom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划XXX" />

            </TableRow>

            <TableRow
                android:layout_height="50dp"
                android:background="@color/cut_off_line"
                android:divider="@color/color_9EA7B4"
                android:showDividers="middle|beginning|end">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="开始时间" />

                <TextView
                    android:id="@+id/tv_starttime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划XXX" />

            </TableRow>

            <TableRow
                android:layout_height="50dp"
                android:divider="@color/color_9EA7B4"
                android:showDividers="middle|beginning|end">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="结束时间" />

                <TextView
                    android:id="@+id/tv_endtime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划XXX" />

            </TableRow>

            <TableRow
                android:layout_height="50dp"
                android:background="@color/cut_off_line"
                android:divider="@color/color_9EA7B4"
                android:showDividers="middle|beginning|end">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="企业名称" />

                <TextView
                    android:id="@+id/tv_companyname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划XXX" />

            </TableRow>

            <TableRow
                android:layout_height="50dp"
                android:divider="@color/color_9EA7B4"
                android:showDividers="middle|beginning|end">

                <TextView

                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="所需抽样批次" />

                <TextView
                    android:id="@+id/tv_goodscount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="计划XXX" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ADB2B8" />

        </TableLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="下一步"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>