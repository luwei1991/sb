<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".ui.MainTaskListActivity">

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:divider="@color/colorAccent"
        android:showDividers="beginning|end|middle">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_selected"
            android:button="@null"
            android:drawableTop="@mipmap/menu_icon1"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="20dp"
            android:text="待办任务" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_selected"
            android:button="@null"
            android:drawableTop="@mipmap/menu_icon8"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="20dp"

            android:text="信息复核" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_selected"
            android:button="@null"
            android:drawableTop="@mipmap/menu_icon2"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="20dp"

            android:text="未上传" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_selected"
            android:button="@null"
            android:drawableTop="@mipmap/menu_icon3"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="20dp"
            android:text="已上传" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_selected"
            android:button="@null"
            android:drawableTop="@mipmap/menu_icon4"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="20dp"
            android:text="我的信息" />


    </RadioGroup>

    <FrameLayout
        android:id="@+id/item_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>