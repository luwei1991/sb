<?xml version="1.0" encoding="utf-8"?>
    <com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/index_top"
                >

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/back_white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返回"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:textColor="@color/qmui_config_color_white"
                   android:text="处置单"
                   android:gravity="center"
                   android:layout_centerInParent="true"
                   />


            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_25"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="抽样单编号:"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_7"
                    />

                <EditText
                    android:id="@+id/et_cydbh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg"
                    android:layout_weight="8"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textColor="@color/qmui_config_color_gray_3"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_25"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="单位名称:"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_7"
                    />

                <EditText
                    android:id="@+id/et_dwmc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg"
                    android:layout_weight="8"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:enabled="false"
                    android:textColor="@color/qmui_config_color_gray_3"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_25"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="委托单位:"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_7"
                    />

                <EditText
                    android:id="@+id/et_wtdw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg"
                    android:layout_weight="8"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textColor="@color/qmui_config_color_gray_3"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_35"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/qb_px_2"
                android:gravity="center"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/qb_px_20"
                    android:elevation="@dimen/qb_px_5"

                    >

                    <TextView
                        android:id="@+id/tv_hn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        android:text="湖南省市场监督管理局"
                        android:textSize="14sp"
                        android:background="@color/qmui_config_color_blue"
                        android:textColor="@color/white"
                        android:padding="@dimen/qb_px_4"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/qb_px_20"
                    android:elevation="@dimen/qb_px_5"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    >

                    <TextView
                        android:id="@+id/tv_gj"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        android:text="国家市场监督管理"
                        android:textSize="14sp"
                        android:background="@color/qmui_config_color_blue"
                        android:textColor="@color/white"
                        android:padding="@dimen/qb_px_4"
                        />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_25"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="时间:"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_7"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg"
                    android:layout_weight="8"
                    android:orientation="horizontal"
                    >
                    <EditText
                        android:id="@+id/et_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="30"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:enabled="false"
                        android:imeOptions="actionDone"
                        android:textColor="@color/qmui_config_color_gray_3"

                        />

                    <ImageView
                        android:id="@+id/iv_calendar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/calendar"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_25"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="类型:"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_7"
                    />

                <RadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg"
                    android:layout_weight="8"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_3"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <RadioButton
                        android:id="@+id/rb_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="销售"
                        />
                    <RadioButton
                        android:id="@+id/rb_product"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="生产"

                        />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_25"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="产品名称:"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_7"
                    />

                <EditText
                    android:id="@+id/et_cpmc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg"
                    android:layout_weight="8"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textColor="@color/qmui_config_color_gray_3"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_25"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="规格型号:"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_7"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_bg"
                    >

                    <EditText
                        android:id="@+id/et_ggxh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="28"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:textColor="@color/qmui_config_color_gray_3"
                        />

                    <ImageView
                        android:id="@+id/iv_sup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/sup"
                        android:layout_gravity="center_vertical"
                        />

                    <ImageView
                        android:id="@+id/iv_sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/sub"
                        android:layout_marginLeft="@dimen/qb_px_10"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_25"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="样品类型:"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_7"
                    />

                <RadioGroup
                    android:id="@+id/rg_sample_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg"
                    android:layout_weight="8"
                    android:textSize="16sp"
                    android:textColor="@color/qmui_config_color_gray_3"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <RadioButton
                        android:id="@+id/rb_by"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="备用样品"
                        />
                    <RadioButton
                        android:id="@+id/rb_jb"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="检毕样品"
                        />
                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/qb_px_20"
                android:paddingRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_5"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_sjdw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="受检单位签名:"
                        android:textSize="16sp"
                        android:gravity="left"
                        android:textColor="@color/qmui_config_color_gray_7"
                        />

                    <FrameLayout
                        android:id="@+id/fl_sjdw"
                        android:layout_width="@dimen/qb_px_154"
                        android:layout_height="@dimen/qb_px_75"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_sjdw"
                        >

                        <ImageView
                            android:id="@+id/iv_sjdw"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/qmui_config_color_gray_7"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签名处"
                            android:textSize="13sp"
                            android:visibility="gone"
                            android:textColor="@color/qmui_config_color_gray_1"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_25"
                        android:paddingLeft="@dimen/qb_px_20"
                        android:paddingRight="@dimen/qb_px_20"
                        android:layout_below="@id/fl_sjdw"
                        android:layout_marginTop="@dimen/qb_px_3"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:text="时间:"
                            android:textSize="16sp"
                            android:textColor="@color/qmui_config_color_gray_7"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/edit_bg"
                            android:layout_weight="8"
                            android:orientation="horizontal"
                            >
                            <EditText
                                android:id="@+id/et_sjdw_time"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="15"
                                android:textSize="16sp"
                                android:textColor="@color/qmui_config_color_gray_3"
                                android:background="@null"
                                android:singleLine="true"
                               android:enabled="false"
                                android:imeOptions="actionDone"
                                />
                            <ImageView
                                android:id="@+id/iv_sjdw_calendar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@mipmap/calendar"
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_cyr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="抽样人签名:"
                        android:textSize="16sp"
                        android:gravity="left"
                        android:textColor="@color/qmui_config_color_gray_7"
                        />

                    <FrameLayout
                        android:id="@+id/fl_cyr"
                        android:layout_width="@dimen/qb_px_154"
                        android:layout_height="@dimen/qb_px_75"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_cyr"
                        android:onClick="@{clickListener}"

                        >

                        <LinearLayout
                            android:id="@+id/ll_cyr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            >

                            <ImageView
                                android:id="@+id/iv_cry_1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/qmui_config_color_gray_7"

                                />

                            <ImageView
                                android:id="@+id/iv_cry_2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/qmui_config_color_gray_7"
                                />
                        </LinearLayout>




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签名处"
                            android:textSize="13sp"
                            android:visibility="gone"
                            android:textColor="@color/qmui_config_color_gray_1"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_25"
                        android:paddingLeft="@dimen/qb_px_20"
                        android:paddingRight="@dimen/qb_px_20"
                        android:layout_below="@id/fl_cyr"
                        android:layout_marginTop="@dimen/qb_px_3"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:text="时间:"
                            android:textSize="16sp"
                            android:textColor="@color/qmui_config_color_gray_7"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/edit_bg"
                            android:layout_weight="8"
                            android:orientation="horizontal"
                            >
                            <EditText
                                android:id="@+id/et_cyr_time"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="15"
                                android:textSize="16sp"
                                android:textColor="@color/qmui_config_color_gray_3"
                                android:background="@null"
                                android:singleLine="true"
                                android:imeOptions="actionDone"
                                android:enabled="false"
                                />
                            <ImageView
                                android:id="@+id/iv_cyr_calendar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@mipmap/calendar"
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>



                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
                <Button
                    android:id="@+id/pdf"
                    android:layout_width="@dimen/qb_px_100"
                    android:layout_height="@dimen/qb_px_22"
                    android:background="@color/qmui_config_color_blue"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/qb_px_2"
                    android:text="生成PDF"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/check_form_margin_left"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            </ScrollView>


        </LinearLayout>


    </com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
